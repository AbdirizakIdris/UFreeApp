<form id="new-session-form" action="/sessions" method="post">
    <h2>Sign in below:</h2><br/>
    <div id="error_box"></div>
    <label for="email">Email: </label>
    <input class="sign-up-in-inputs" id="email" type="email" name="email" value="">
    <label for="password">Password: </label>
    <input class="sign-up-in-inputs" id="password" type="password" name="password" value="">
    <input class="submit-button" id="submit" type="submit" value="Submit">
</form>
<script>
  if (window.location.hash == "#bademail")
    document.getElementById('error_box').innerText = "Account not found"
  else if (window.location.hash == "#badpassword")
    document.getElementById('error_box').innerText = "Incorrect Password"
</script>